{
  "style": "style.css",
  "windows": [
    {
      "monitor": ".*",
      "type": "Kompass.Bar",
      "properties": {
        "anchor": 13,
        "vertical": true,
        "exclusivity": 1,
        "start_widgets": [
          { "type": "River.Tags",
            "properties": {
            "vertical": true,
              "show_labels": false
            }
          }
        ],
        "center_widgets": [
        ],
        "end_widgets": [
          { 
            "type": "KompassTray.Tray",
            "properties": {
              "vertical": true
            }
          },
          { "type": "Kompass.VClock" }
        ]
      }
    }
  ]
}
